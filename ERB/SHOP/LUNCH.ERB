;食べたものはFLAG:40で記録されている
@EAT_LUNCH_2
#DIM LCOUNT
;0は체력％、1は정력％、2は호감도、3は술주정률
#DIM DYNAMIC LUNCH_BONUS, 5
#DIM MOON_DROP
#DIM CAT_FAVOR

MOON_DROP = 0
CAT_FAVOR = 0

;食事等による체력회복
SELECTCASE NAMES("食事", FLAG:40)
CASE "시프리샌드"
	LUNCH_BONUS:0 = 25
	LUNCH_BONUS:1 = 25
CASE "마운틴스테이크"
	LUNCH_BONUS:0 = 50

CASE "과일샐러드"
	LUNCH_BONUS:0 = 25
CASE "훈제연어"
	LUNCH_BONUS:0 = 25
	CAT_FAVOR = 50

CASE "허니비스킷"
	LUNCH_BONUS:0 = 25
	LUNCH_BONUS:2 = 50
CASE "베이크드애플"
	LUNCH_BONUS:0 = 25
	LUNCH_BONUS:2 = 50

CASE "벌꿀술", "MEAD", "ミョッズ"
	LUNCH_BONUS:3 = 25
CASE "파두르사워"
	LUNCH_BONUS:3 = 50
CASE "개다래와인"
	LUNCH_BONUS:3 = 25
	CAT_FAVOR = 100

CASE "문드롭스"
	LUNCH_BONUS:0 = 50
	;これはムーンドロップ専用処理
	;LUNCH_BONUS:2 = 100
	MOON_DROP = 100
CASEELSE
	RETURN 0
ENDSELECT

;食器で회복量UP
IF ITEM:미스릴스푼
	TIMES LUNCH_BONUS:0, 1.60
	TIMES LUNCH_BONUS:1, 1.60
ELSEIF ITEM:은스푼
	TIMES LUNCH_BONUS:0, 1.40
	TIMES LUNCH_BONUS:1, 1.40
ELSEIF ITEM:도자기스푼
	TIMES LUNCH_BONUS:0, 1.20
	TIMES LUNCH_BONUS:1, 1.20
ENDIF

FOR LCOUNT, 1, CHARANUM
	;체력회복
	CALL CALC, "체력회복상한무시", MAXBASE:LCOUNT:체력 * LUNCH_BONUS:0 / 100, LCOUNT

	;정력회복
	CALL CALC, "정력회복", MAXBASE:LCOUNT:정력 * LUNCH_BONUS:1 / 100, LCOUNT

	;酔っ払い
	SIF LUNCH_BONUS:3
		CALL ADD_STATE, LCOUNT, "드렁크"

	;MASTERは호감도関係なし
	SIF LCOUNT == MASTER
		CONTINUE

	;猫専用メニュー
	SIF CAT_FAVOR && BASE:LCOUNT:종족 == 6
		CFLAG:LCOUNT:2 += CAT_FAVOR

	;문드롭스
	SIF MOON_DROP && COND("몽마", LCOUNT)
		CFLAG:LCOUNT:2 += MOON_DROP

	;호감도ＵＰ
	CFLAG:LCOUNT:2 += LUNCH_BONUS:2
NEXT

IF MOON_DROP
	PRINTFORMW 몽마들에게 문드롭스를 먹였다！
ELSEIF LUNCH_BONUS:3
	PRINTFORML 모두가 %조사처리(NAMES("食事", FLAG:40),"를")% 즐겼다！
	CALL PRINT_STR, "핑크_※드렁크상태라면 조교의 무드가 높아진 상태에서 시작합니다※_W"
ELSE
	PRINTFORMW 모두가 %NAMES("食事", FLAG:40)%에 입맛을 다셨다！
ENDIF

LOCALS = 
SIF LUNCH_BONUS:0
	LOCALS = %LOCALS%\@ LOCALS != "" ? ＆ # \@체력{LUNCH_BONUS:0}％회복！
SIF LUNCH_BONUS:1
