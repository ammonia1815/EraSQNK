IF LUNCH_BONUS:2
	LOCALS = %LOCALS%\@ LOCALS != "" ? ＆ # \@호감도{LUNCH_BONUS:2}ＵＰ！
ELSEIF MOON_DROP
	LOCALS = %LOCALS%\@ LOCALS != "" ? ＆ # \@몽마의 호감도{MOON_DROP}ＵＰ！
ELSEIF CAT_FAVOR
	LOCALS = %LOCALS%\@ LOCALS != "" ? ＆ # \@고양이의 호감도{CAT_FAVOR}ＵＰ！
ENDIF

SIF LOCALS != ""
