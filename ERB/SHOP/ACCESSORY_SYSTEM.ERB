@ACCESSORY_ABL()
#FUNCTION
;LOCALに XXXを効果の種類, AAAを効力として, XXXAAA の形で数値を入れる

SELECTCASE RAND:100
;殆どの場合はステータス変化(種類は정력,기교,정신력,매력)
CASE IS <= 50
	;매력
	IF RAND:5 == 0
		LOCAL = 5000
	;정신력
	ELSEIF RAND:4 == 0
		LOCAL = 4000
	;기교
	ELSEIF RAND:3 == 0
		LOCAL = 3000
	;정력
	ELSEIF RAND:2
		LOCAL = 2000
	;ＥＰ
	ELSE
		LOCAL = 1000
	ENDIF

	SELECTCASE RAND:10
	CASE IS < 2
		LOCAL += 10
	CASE IS < 4
		LOCAL += 20
	CASE IS < 6
		LOCAL += 30
	CASE IS < 8
		LOCAL += 40
	CASEELSE
		LOCAL += 50
	ENDSELECT
;특수効果
CASE IS <= 79
	SELECTCASE RAND:11
	;○○강화 該当部位をせめる場合に与える快感が強くなる 種類はキッス,바스트,힙,ヴァッジ 
	CASE 0 TO 2
		;Ｃ
		IF RAND:5 == 0
			LOCAL = 10000
		;Ｖ
		ELSEIF RAND:4 == 0
			LOCAL = 11000
		;Ａ
		ELSEIF RAND:3 == 0
			LOCAL = 12000
		;Ｂ
		ELSEIF RAND:2
			LOCAL = 13000
		;Ｍ
		ELSE
			LOCAL = 14000
		ENDIF
		LOCAL += 50
	;실행치アップ+○ 種類は+4,+7,+10
	CASE 3
		LOCAL = 21000
		SELECTCASE RAND:10
		CASE IS <= 6
			LOCAL += 4
		CASE IS <= 8
			LOCAL += 7
		CASEELSE
			LOCAL += 10
		ENDSELECT
	;무드 업+○ 무드 업+○
	CASE 4
		LOCAL = 20000
		SELECTCASE RAND:10
		CASE IS <= 6
			LOCAL += 1
		CASE IS <= 8
			LOCAL += 2
		CASEELSE
			LOCAL += 3
		ENDSELECT
	;넘어뜨려질확률+○％
	CASE 5
		LOCAL = 23000
		SELECTCASE RAND:10
		CASE IS <= 6
			LOCAL += 10
		CASE IS <= 8
			LOCAL += 20
		CASEELSE
			LOCAL += 30
		ENDSELECT
	;받는쾌감+○％ 種類は+10,+20,+50
	CASE 6
		LOCAL = 22000
		SELECTCASE RAND:10
		CASE IS <= 6
			LOCAL += 10
		CASE IS <= 8
			LOCAL += 20
		CASEELSE
			LOCAL += 50
		ENDSELECT
	;○○に強い その종족に強くなる 種類は소녀,요정,악마,ケモノ,도마뱀 

	;常に아르카나
	CASE 7, 8
		;항상인라지
		IF RAND:4 == 0
			LOCAL = 33000
		;항상센시브
		ELSEIF RAND:3 == 0
			LOCAL = 32000
		;항상미니멈 ステート異常미니멈になる
		ELSEIF RAND:2
			LOCAL = 31000
		;항상우르즈군
		ELSE
			LOCAL = 30000
		ENDIF
	;경험치増加
	CASE 9
		LOCAL = 24000
		SELECTCASE RAND:10
		CASE IS <= 6
			LOCAL += 20
		CASE IS <= 8
			LOCAL += 50
		CASEELSE
			LOCAL += 100
		ENDSELECT
	;스톡증가
	CASEELSE
		LOCAL = 6000
	ENDSELECT
;主に탐색で効くもの
CASEELSE
	;은밀+○ 敵に出会う확률軽減. 
	IF RAND:3 == 0
		LOCAL = 50000
	;보물상자출현율アップ
	ELSEIF RAND:2
		LOCAL = 51000
	;문발견율アップ
	ELSE
		LOCAL = 52000
	ENDIF
	IF RAND:4 == 0
		LOCAL += 20
	ELSE
		LOCAL += 40
	ENDIF
ENDSELECT
RETURNF LOCAL

