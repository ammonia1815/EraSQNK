			ENDSELECT
			PRINTFORM %BL(1)%%LOCALS, TABLENGTH-1, LEFT%
		NEXT
		PRINTL

		SETCOLOR DEF_COLOR("황색")
		FOR LCOUNT:1, 1, 6
			FOR LCOUNT, 1, 3
				LOCALS =
				SIF FLAG:(CHOICE:LCOUNT + LCOUNT:1)
					LOCALS = %BL(5)% %ACCESSORY_EFFECT(FLAG:(CHOICE:LCOUNT + LCOUNT:1) )%
				PRINTFORM %LOCALS, TABLENGTH, LEFT%
			NEXT
