			SIF LOCAL >= 380
				BREAK

			FOR LCOUNT:1, 0, 10
				SWAP FLAG:(LOCAL + LCOUNT:1), FLAG:(LOCAL + 10 + LCOUNT:1)
			NEXT
		NEXT
