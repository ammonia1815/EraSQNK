@PRINT_NUM_NAME, ARGS, ARG
#DIM 버그체크
VARSET 버그체크
;登録番号付き名前表示
SELECTCASE ARG
CASE ASSI
	PRINT ○
CASE TARGET
	PRINT ＞
CASEELSE
	PRINT 　
ENDSELECT

LOCALS = 
SELECTCASE ARGS
CASE "조수변경"
	IF (CONFIG("조수への지시") && ABL:ARG:조수 == 0) || COND("조수가능", ARG) == 0
		LOCALS = ×
		SETCOLOR DEF_COLOR("회색")
	ENDIF
CASE "매각"
	IF TALENT:ARG:상사상애
		LOCALS = 상
	ELSEIF TALENT:ARG:서약
		LOCALS = 서
	ELSEIF COND("매각가능", ARG) == 0
		LOCALS = ×
	ENDIF
CASE "정액각인"
	SIF COND("정액각인刻印가능", ARG) == 0
		LOCALS = ×
CASE "거근약", "축근약", "박피약", "신피약", "풍유환", "축유환", "풍둔약", "축둔약", "거인의약", "소인의약"
	SIF COND(ARGS, ARG) == 0
		LOCALS = ×
CASEELSE
    버그체크 += 1
ENDSELECT
SIF LOCALS == ""
	LOCALS = {ARG, 2}

PRINTFORM [%LOCALS%]

SELECTCASE ARGS
CASE "서약의반지"
	RESULT = 0
	TRYCALLFORM IS_SINGLE_ENDING_K{NO:ARG}_{CFLAG:ARG:209}
	SIF RESULT
		SETCOLOR DEF_COLOR("하트핑크")
CASE "능력표시", "３사이즈閲覧"
	IF STATE("술주정", ARG)
		SETCOLOR DEF_COLOR("파랑")
	ELSEIF STATE("드렁크", ARG)
		SETCOLOR DEF_COLOR("하트핑크")
	ENDIF
CASEELSE
    버그체크 += 1
ENDSELECT

PRINTFORM %TEXT_LJ(NAME:ARG, 17)%

RESETCOLOR

SELECTCASE ARGS
CASE "체력", "능력표시", "조교대상변경"
	;체력の表示
	SIF BASE:ARG:체력 < 0
		BASE:ARG:체력 = 0
	CALL PRINT_BAR, "감소게이지", BASE:ARG:체력, MAXBASE:ARG:체력, 5
	PRINTFORM {100*BASE:ARG:체력/MAXBASE:ARG:체력, 3}\%
CASE "체력と정력"
	;체력の表示
	SIF BASE:ARG:체력 < 0
		BASE:ARG:체력 = 0
	PRINTPLAINFORM {BASE:ARG:체력, 5}/{MAXBASE:ARG:체력, 5}
	CALL PRINT_BAR, "감소게이지", BASE:ARG:체력, MAXBASE:ARG:체력, 5
	PRINTFORM {100*BASE:ARG:체력/MAXBASE:ARG:체력, 3}\% 
	;정력の表示
	SIF BASE:ARG:정력 < 0
		BASE:ARG:정력 = 0
	PRINTFORM {BASE:ARG:정력, 3}/{MAXBASE:ARG:정력, 3}
	CALL PRINT_BAR, "감소게이지", BASE:ARG:정력, MAXBASE:ARG:정력, 5
	PRINTFORM {100*BASE:ARG:정력/MAXBASE:ARG:정력, 3}\%
	SIF MAXBASE:ARG:스톡
		PRINTFORM ×({BASE:ARG:스톡}/{MAXBASE:ARG:스톡})
	PRINTL 
	RETURN 0
CASE "３사이즈閲覧"
	CALL NEW_PRINT_3SIZE, ARG, "일람표시"
	RETURN 0
CASE "탐색"
	CALL TEXT, "탐색능력", ARG
	RETURN 0
CASE "매각"
	;PRINTFORM  \@ TALENT:ARG:연모 ? 恋 # -- \@ \@ TALENT:ARG:음란 ? 淫 # -- \@ 

	;価値表示
	LOCAL = TARGET

	TARGET = ARG
	CALL PRIZE_CHARA, 1

	TARGET = LOCAL
	PRINTL 
	RETURN 0
CASE "조수변경"
	SIF (CONFIG("조수への지시") && ABL:ARG:조수 == 0) || COND("조수가능", ARG) == 0
		SETCOLOR DEF_COLOR("회색")
	IF CONFIG("조수への지시")
		CALL ASSI_LIST_INDICATE, ARG
		PRINTL 
	ELSEIF CONFIG("조수の탐색능력표시")
		CALL TEXT, "탐색능력", ARG
	ELSE
		CALL ASSI_LIST_ABL, ARG, 1
		PRINTL 
	ENDIF
	RESETCOLOR
	RETURN 0
CASE "コス확인"
	CALL PRINT_DRESS, ARG, "短縮표시"
	PRINTL 
	RETURN 0
CASE "避妊措置"
	CALL PRINT_N, ARG
	IF TALENT:ARG:피임의부적
		SETCOLOR DEF_COLOR("노랑")
		PRINTFORM  피임의부적  
		RESETCOLOR
	ELSE
		PRINTFORM  피임약:\@ TALENT:ARG:피임약복용 ? {TALENT:ARG:피임약복용, 3}일분 # ------- \@ 
	ENDIF
	PRINTFORM \@ TALENT:ARG:처녀 ? 처녀 # ---- \@
	CALL PRINT_E, ARG, ARGS
	PRINTL 
	RETURN 0
CASE "다방"
	SELECTCASE CFLAG:ARG:31
	CASE 0
		PRINT  자유롭게 시킨다
	CASE 1
		PRINT   펠라까지
	CASE 2
		PRINT  만지기까지
	CASE 3
		PRINT  판치라까지
	CASE 10
		PRINT  Ｈ한것 금지
	CASE 99
		PRINT  알바금지
	ENDSELECT
CASE "후타나리약"
	PRINTFORM  \@ TALENT:ARG:후타나리 ? 후타나리 # 여자　 \@
CASE "파란드롭스"
	PRINTFORM  \@ TALENT:ARG:모유체질 ? 모유 # ---- \@
	IF COND("진성함몰유두", ARG)
		PRINTFORM  진성함몰
	ELSEIF COND("가성함몰유두", ARG)
		PRINTFORM  가성함몰
	ELSE
		PRINTFORM  --------
	ENDIF
CASE "빨간드롭스"
	PRINTFORM  \@ TALENT:ARG:처녀 ? ------ # 비처녀 \@ \@ TALENT:ARG:모유체질 ? 모유 # ---- \@
CASE "검은드롭스"
	IF TALENT:ARG:후타나리
		PRINT  후타나리
	ELSEIF TALENT:ARG:남자
		PRINT  남자 
	ELSE
		PRINT  여자 
	ENDIF
CASE "하얀드롭스"
	PRINTFORM  \@ TALENT:ARG:오줌싸개버릇 ? 뇨 # -- \@ \@ TALENT:ARG:Ｖ손상 ? Ｖ상 # ---- \@ \@ TALENT:ARG:Ａ손상 ? Ａ상 # ---- \@
CASE "정액각인"
	SELECTCASE MARK:ARG:정액각인
	CASE 1 TO 4
		SETCOLOR DEF_COLOR("하트핑크")
	;ちょっと目に優しくない色かもしれない
	;CASE 4
	;	SETCOLOR DEF_COLOR("쇼킹핑크")
	ENDSELECT

	IF TALENT:ARG:남자
		PRINTFORM  -------
	ELSE
		PRINTFORM  정액각인LV{MARK:ARG:정액각인}
	ENDIF

	RESETCOLOR

	PRINTFORM  \@ TALENT:ARG:처녀 ? 처녀 # ---- \@
CASE "조교지식"
	IF TALENT:ARG:조교지식
		PRINTFORML %TALENT_NAME(185, TALENT:ARG:조교지식, ARG)%
	ELSE
		PRINTFORML 없음
	ENDIF
	RETURN 0
CASE "페니스", "거근약", "축근약", "박피약", "신피약"
	IF GETBIT(TALENT:ARG:페니스, 5)
		PRINT  용 보통
	ELSEIF GETBIT(TALENT:ARG:페니스, 4)
		PRINT  팔 보통
	ELSEIF GETBIT(TALENT:ARG:페니스, 3)
		PRINT  말좆
	ELSEIF GETBIT(TALENT:ARG:페니스, 2)
		PRINT  거근
	ELSEIF GETBIT(TALENT:ARG:페니스, 1)
		PRINT  왜소
	ELSEIF GETBIT(TALENT:ARG:페니스, 0)
		PRINT  보통
	ENDIF
	IF GETBIT(TALENT:ARG:페니스, 12)
		PRINT  진성포경
	ELSEIF GETBIT(TALENT:ARG:페니스, 11)
		PRINT  가성포경
	ELSE
		PRINT  벗겨냄
	ENDIF
CASE "바스트", "풍유환", "축유환"
	IF TALENT:ARG:거유 >= 3
		PRINT  초유 
	ELSEIF TALENT:ARG:거유 == 2
		PRINT  폭유 
	ELSEIF TALENT:ARG:거유
		PRINT  거유 
	ELSEIF TALENT:ARG:빈유
		PRINT  빈유 
	ELSE
		PRINT  평유 
	ENDIF
	IF CONFIG("３사이즈")
		CALL NEW_PRINT_3SIZE, ARG, "일람표시"
		RETURN 0
	ENDIF
CASE "힙", "풍둔약", "축둔약"
	IF COND("큰엉덩이", ARG) >= 3
		PRINT 초고 
	ELSEIF COND("큰엉덩이", ARG) == 2
		PRINT 왕엉덩이 
	ELSEIF COND("큰엉덩이", ARG)
		PRINT 큰엉덩이 
	ELSEIF COND("작은엉덩이", ARG)
		PRINT 작은엉덩이 
	ELSE
		PRINT 보통엉덩이 
	ENDIF
	IF CONFIG("３사이즈")
		CALL NEW_PRINT_3SIZE, ARG, "일람표시"
		RETURN 0
	ENDIF
CASE "신장", "거인의약", "소인의약"
	IF TALENT:ARG:장신
		PRINT  장신 
	ELSEIF TALENT:ARG:작은몸집
		PRINT  작은 몸집 
	ELSE
		PRINT  평균 
	ENDIF
	IF CONFIG("３사이즈")
		CALL NEW_PRINT_3SIZE, ARG, "일람표시"
		RETURN 0
	ENDIF
CASE "피부색", "무지개의약"
	IF TALENT:ARG:피부색
		PRINTFORM  %TEXT_RJ(CONDS("피부색", ARG), 6)%
	ELSE
		PRINTFORM    보통
	ENDIF
CASE "繰越キャラ"
	PRINT  
	IF CFLAG:ARG:6
		SETCOLOR DEF_COLOR("하트핑크")
		CALL HEARTMARK
		RESETCOLOR
	ELSE
		PRINT -
	ENDIF
CASE "애널라이즈"
	SELECTCASE COND("욕구불만", ARG)
	CASE 2
		CALL PRINT_BAR, "복숭아색게이지", BASE:ARG:욕구불만, 30, 5
	CASE 1
		CALL PRINT_BAR, "황색게이지", BASE:ARG:욕구불만, 30, 5
	CASEELSE
		CALL PRINT_BAR, "백색게이지", BASE:ARG:욕구불만, 30, 5
	ENDSELECT

	;好感度が2500이상
	SIF CFLAG:ARG:2 >= 2500
		SETCOLOR DEF_COLOR("하트핑크")
	PRINTFORM  {CFLAG:ARG:2, 8} 
	RESETCOLOR

	SIF COND("ご無沙汰", ARG)
		SETCOLOR DEF_COLOR("暗황색")
	PRINTFORM {COND("조교공백기간", ARG), 4}날 
	RESETCOLOR

	LOCAL = TARGET
	TARGET = ARG
	CALL ANALYSIS_CALC_SB, 1
	TARGET = LOCAL
	RETURN 0
CASE "하룻밤개방허가"
	SELECTCASE COND("外出許可", ARG)
	CASE 0
		PRINTFORM   외출하게 하지 않는다
	CASE 1
		SETCOLOR DEF_COLOR("하트핑크")
		PRINTFORM 좋아하게 외출하게 한다
	CASE 2
		SETCOLOR DEF_COLOR("황색")
		PRINTFORM 피임 상태라면ＯＫ
	CASE 3
		SETCOLOR DEF_COLOR("노랑")
		PRINTFORM 위험한 날은 안돼
	CASE 4
		SETCOLOR DEF_COLOR("핑크")
		PRINTFORM 위험한 날만 허락한다
	ENDSELECT
	RESETCOLOR
CASE "음모＆겨털"
	PRINTFORML 음모：%TEXT_LJ(CONDS("음모", ARG), 10)% \@ CONFIG("겨털") ? %TEXTS("겨드랑이")%털：%CONDS("겨털", ARG)% # \@
	RETURN 0
CASE "유두선택"
	SELECTCASE COND("유두비대", ARG)
	CASE 3
		SETCOLOR DEF_COLOR("쇼킹핑크")
		LOCALS = 유두비대LV３/{ARG}
		PRINTBUTTON " LV３", LOCALS
	CASE 2
		SETCOLOR DEF_COLOR("핑크")
		LOCALS = 유두비대LV２/{ARG}
		PRINTBUTTON " LV２", LOCALS
	CASE 1
		SETCOLOR DEF_COLOR("하트핑크")
		LOCALS = 유두비대LV１/{ARG}
		PRINTBUTTON " LV１", LOCALS
	CASE 0
		LOCALS = 유두비대無し/{ARG}
		PRINTBUTTON " 없음", LOCALS
	ENDSELECT
	RESETCOLOR

	IF COND("진성함몰유두", ARG)
		SETCOLOR DEF_COLOR("핑크")
		LOCALS = 진성함몰/{ARG}
		PRINTBUTTON " 진성", LOCALS
	ELSEIF COND("가성함몰유두", ARG)
		SETCOLOR DEF_COLOR("하트핑크")
		LOCALS = 가성함몰/{ARG}
		PRINTBUTTON " 가성", LOCALS
	ELSE
		LOCALS = 보통유두/{ARG}
		PRINTBUTTON " 노출", LOCALS
	ENDIF
	RESETCOLOR

	SELECTCASE COND("거유륜", ARG)
	CASE 3
		SETCOLOR DEF_COLOR("쇼킹핑크")
		LOCALS = 거유륜LV３/{ARG}
		PRINTBUTTON " LV３", LOCALS
	CASE 2
		SETCOLOR DEF_COLOR("핑크")
		LOCALS = 거유륜LV２/{ARG}
		PRINTBUTTON " LV２", LOCALS
	CASE 1
		SETCOLOR DEF_COLOR("하트핑크")
		LOCALS = 거유륜LV１/{ARG}
		PRINTBUTTON " LV１", LOCALS
	CASE 0
		LOCALS = 거유륜無し/{ARG}
		PRINTBUTTON " 보통", LOCALS
	ENDSELECT
	RESETCOLOR

	CALL PRINT_T, ARG
	CALL PRINT_N, ARG
	PRINTL 
	RETURN 0
CASE ""   ;임시 추가
CASEELSE
    버그체크 += 1
ENDSELECT

