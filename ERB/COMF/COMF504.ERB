@COM504
;역제모

PRINTL 역제모

CALL TRAIN_MESSAGE_B

SIF REFUSE_CHECK()
	RETURN 0

STR:0 = 역제모

RETURN 1

@FLAG_COM504, ARG
CALL SETFLAG, "제모플래그", PLAYER
;上手だと, 날짜が0になります
SIF ABL:기교 < 4 && COND("음모", PLAYER) > 3
	BASE:PLAYER:음모 += 5

;조교자のＰorＶ⇔몽마の손가락の汚れが移動
SIF PENIS(PLAYER)
	CALL EQ_STAIN, TARGET, PLAYER, 1, 2
SIF TALENT:PLAYER:남자 == 0
	CALL EQ_STAIN, TARGET, PLAYER, 1, 3


@SOURCE_COM504, ARG
VARSET LOCAL

LOCAL:20 += 50
LOCAL:21 += 100

;욕정(LOCAL:11) 　0～5000
LOCAL:11 = 2000
;달성감(LOCAL:5)　1000～5000
LOCAL:5 = 1000
;일탈(LOCAL:14)　2000
LOCAL:14 = 1000

SELECTCASE COND("음모", PLAYER)
CASE 3
	LOCAL:5 += 1000
	LOCAL:14 += 1000
CASE 2
	LOCAL:5 += 1500
	LOCAL:14 += 2000
ENDSELECT

;ABL:새드끼をみる
SELECTCASE ABL:새드끼
CASE 0
	TIMES LOCAL:11 , 0.00
	TIMES LOCAL:5 , 1.50
	TIMES LOCAL:14 , 2.00
CASE 1
	TIMES LOCAL:11 , 0.10
	TIMES LOCAL:5 , 1.20
	TIMES LOCAL:14 , 1.50
CASE 2
	TIMES LOCAL:11 , 0.40
CASE 3
	TIMES LOCAL:11 , 0.80
	TIMES LOCAL:5 , 0.70
	TIMES LOCAL:14 , 0.70
CASE 4
	TIMES LOCAL:11 , 1.20
	TIMES LOCAL:5 , 0.60
	TIMES LOCAL:14 , 0.40
CASEELSE
	TIMES LOCAL:11 , 1.50
	TIMES LOCAL:5 , 0.30
	TIMES LOCAL:14 , 0.10
ENDSELECT

CALL CALC, "조교소스", LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12, LOCAL:13, LOCAL:14, LOCAL:15, LOCAL:16, LOCAL:17, LOCAL:18, LOCAL:19, LOCAL:20, LOCAL:21, ARG


@TRAIN_MESSAGE_COM504
IF TALENT:PLAYER:남자
	PRINTFORMW %조사처리(CALLNAME:TARGET,"는")% %조사처리(CALLNAME:PLAYER,"를")% 억누르고, 음모를 깎기 시작했다…
ELSE
	PRINTFORMW %조사처리(CALLNAME:TARGET,"는")% %CALLNAME:PLAYER%의 가랑이를 열고, 그곳의 털을 깎기 시작했다. 
ENDIF

IF ABL:기교 >= 4 && RAND:5 == 0
	PRINTFORM %조사처리(CALLNAME:PLAYER,"는")% 음모를 
	SIF ABL:기교 >= 5
		PRINT 정성스럽게 
	PRINTW 제모당하고 말았다…
	BASE:PLAYER:음모 = 200
	DOWNBASE:체력 += 30
	DOWNBASE:기력 += 80
ELSEIF ABL:기교 >= 3 && RAND:2 == 0 && COND("음모", PLAYER) >= 6
	PRINTFORM %조사처리(CALLNAME:TARGET,"는")% 
	SIF ABL:기교 >= 4
		PRINT 훌륭하게 
	PRINTFORMW %CALLNAME:PLAYER%의 음모의 형태를 정돈했습니다…
	BASE:PLAYER:음모 = 500
ELSE
	PRINTFORM %조사처리(CALLNAME:TARGET,"는")% 
	IF ABL:기교 >= 4
		PRINT 정중하게 
	ELSEIF ABL:기교 <= 2 && RAND:2 == 0
		PRINT 조금 실수해버린 것 같아 그 결과
	ENDIF
	PRINTFORMW %CALLNAME:PLAYER%의 음모를 깎아서 맨질맨질하게 만들었습니다…
	BASE:PLAYER:음모 = 300
ENDIF
