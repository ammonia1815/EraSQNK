SIF PREVCOM == 6 || TEQUIP:키스
	CFLAG:269 += 15
;見つめ合って삽입中(반발각인0LV)
SIF INSERT("정상위") + INSERT("대면좌위") && MARK:반발각인 == 0
	CFLAG:269 += 15
;무드 업인센스
SELECTCASE GETBITS(TEQUIP:MASTER:인센스, 4, 6)
CASE 1p4
	CFLAG:269 += 3
CASE 1p5
	CFLAG:269 += 8
CASE 1p6
	CFLAG:269 += 15
ENDSELECT

;핌블베트と셀마
SIF NO:TARGET == 49
	CFLAG:269 += 50
;二人とも달콤한말の놀림손
IF ASSI
	SIF TALENT:ASSI:달콤한말 && TALENT:MASTER:달콤한말
		CFLAG:269 += 30
ENDIF
;詩集の持ってる数
CFLAG:269 += MIN(ITEM:로즈닐의시집, 10)
;前回절정
CFLAG:269 += PREVEX("절정수합계")*5

;成功率Down보정
SIF TALENT:겁쟁이
	CFLAG:269 -= 8
SIF TALENT:반항적
	CFLAG:269 -= 10
SIF TALENT:건방짐
	CFLAG:269 -= 10
SIF TALENT:냉정
	CFLAG:269 -= 3
SIF TALENT:무관심
	CFLAG:269 -= 8
SIF TALENT:감정결핍
	CFLAG:269 -= 5
SIF TALENT:보수적
