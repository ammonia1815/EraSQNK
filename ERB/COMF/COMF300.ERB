	CFLAG:269 += 10
SIF CFLAG:269 < 0
	CFLAG:269 = 0

;合計を表示
;PRINTFORML 成功率 ： {CFLAG:269}％

;話を聞いてくれる
IF CFLAG:269  >= MAX(1, RAND:100)
	TEQUIP:달콤한말 = 2
;話を聞いてくれない
ELSE
	TEQUIP:달콤한말 = 0
	CFLAG:269 = 0
	DOWNBASE:체력 += 30
	DOWNBASE:기력 += 120
ENDIF

RETURN 1

