@EVENTTRAIN
#PRI
;조교中の플래그ON
FLAG:99 = TARGET
SETBIT FLAG:99, 10
;사정플래그, 처녀상실플래그などをリセット
VARSET TFLAG
;조교개시時のTARGETの番号を記録
FLAG:21 = TARGET
;ASSIを조교した플래그をリセット
FLAG:22 = 0
;Ｗ넘어뜨리기の変数をリセット
VARSET SELECTCOM, -1
VARSET PREVCOM, -1
;不요정な文字列を初期化
VARSET STR, "", 0, 10
;これはどうなんだろうと思いつつ、커맨드表示０の時には一回だけ全部表示にしてみるぞ
IF GETBITS(FLAG:210, 0, 13) == 0 && CONFIG("조교필터경험플래그") == 0
	FLAG:210 = INVERTBITS(FLAG:210, 0, 13)
	SETBIT FLAG:210, 60
ENDIF

;フラグに使う現実시간を取得
CALL GET_REALTIMEFORFLAG

;조교자は誰か
PLAYER = MASTER

;複数プレイの基本的な補佐に조수を설정。変更する時には違う人を설정する事
PLAYER:1 = ASSI
TARGET:1 = ASSI

;레벨리미터체크
CALL SETFLAG, "레벨리미터"
;크리스마스트리체크
SIF DAYEV("크리스마스주간")
	TFLAG:33 += NUM("크리스마스트리") * 30
;드렁크による무드보정
SIF STATE("드렁크", TARGET)
	TFLAG:33 += 90
;SIF STATE("드렁크", MASTER)
;	TFLAG:33 += 45

;開始前の諸설정１（구상前でリセットされてそうなもの）
CALL SETFLAG, "조교개시前Ａ", TARGET
CALL SETFLAG, "조교개시前Ａ", MASTER
SIF ASSI
	CALL SETFLAG, "조교개시前Ａ", ASSI

;衣装の汚れ
CALL STAIN_CALC_COSPLAY


@EVENTTRAIN
#LATER
;開始前の諸설정２（前回記録で구상で使えそうなものをリセット）
CALL SETFLAG, "조교개시前Ｂ", TARGET
CALL SETFLAG, "조교개시前Ｂ", MASTER
SIF ASSI
	CALL SETFLAG, "조교개시前Ｂ", ASSI

;食事などの処理
SELECTCASE NAMES("食事", FLAG:40)
CASE "시프리샌드"

CASE "마운틴스테이크"

CASE "과일샐러드"
	CALL ADD_STATE, MASTER, "에올군"

CASE "훈제연어"

CASE "허니비스킷", "베이크드애플"
	;유치なキャラはお菓子に弱い
	IF TALENT:유치
		PRINTFORML %조사처리(CALLNAME:TARGET,"는")% 과자를 먹고 기분이 좋아진 것 같다
		CFLAG:2 += 50
		PALAM:순종 += 500
	ENDIF
CASE "벌꿀술"

CASE "파두르사워"

CASE "개다래와인"
	;개다래ワイン
	IF BASE:종족 == 6
		PRINTFORML %조사처리(CALLNAME:TARGET,"는")% 눈동자를 멍하게 하고 발정하고 있다…
		PALAM:Ｖ윤 += 3000
		PALAM:순종 += 3000
		PALAM:욕정 += 3000
	ENDIF

CASE "문드롭스"

ENDSELECT


DRAWLINE
;조수が忙しく色々準備
CALL EVENT_ASSI_AUTO, "조교개시"
