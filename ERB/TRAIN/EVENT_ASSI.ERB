SELECTCASE ARGS
CASE "お청소"
	CALL EVENT_ASSI_OSOUJI
CASE "조교개시"
	CALL EVENT_ASSI_MAGIC, ARGS
	CALL EVENT_ASSI_ITEM, ARGS
	CALL EVENT_ASSI_OSOUJI
	CALL EVENT_ASSI_SONG, ARGS
