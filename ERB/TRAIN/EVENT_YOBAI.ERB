			PRINTFORMW 당신하%CALLNAME:TARGET%에 대한 배반을 느끼면서도, 이윽고%CALLNAME:(TARGET:1)%노허리놀림에 응하도록(듯이) 스스로 허리를 흔들기 시작해 버린다…
			LOCALS = 당신は%CALLNAME:(TARGET:1)%に%TEXTR("種付け", "질내사정", "犯", "레이프")%されながら、愛する%CALLNAME:TARGET%の隣で%TEXTR("イかされ", "達し", "절정し", "快楽に溺れ")%てしまった…
		ENDIF
	ENDSELECT

	SWAP TARGET, TARGET:1
	CALL SIMULATE_TRAIN, LOCAL, BASE:(TARGET:1):정력/20 + LIMIT(RAND:(BASE:(TARGET:1):정력/10 + 1), 0, BASE:(TARGET:1):정력/15)
	SWAP TARGET, TARGET:1

	PRINTFORMW %LOCALS%

ENDSELECT


;-------------------------------------------------
;요바이이벤트の決定。何をやるかは CSTR:요바이 で記録する
;複数プレイは短く「난교」と표기する
;-------------------------------------------------
@PLAY_AT_EVENING
#DIM LCOUNT
;ランダム선택に用いる
#DIM NUM_FIND


SIF COND("요바이가능") == 0 || TIME == 0 || COND("손一杯", MASTER)
	RETURN 0

;반발각인が3あるとダメ
SIF MARK:반발각인 >= 3
	RETURN 0

;실행가능명령の確認
CALL CHECK_COM_ABLE, TARGET

;まずは난교かどうか。욕구불만な人が多いと난교になりやすい
IF COND("난교가능") && (CHARA_NUM("욕구불만で난교가능") >= 3 + RANDF(7) || (FIND_COND("상성◎", "난교가능") && RAND:3 == 0) )
	CALL EVENT_RANKOU_SET, "요바이난교"
	;난교プレイが実行가능ならば決定
	SIF CSTR:요바이 != ""
		RETURN 1
ENDIF


;이하は通常の一人での요바이
NUM_FIND = 0

FOR LCOUNT, 0, 10
	SELECTCASE LCOUNT
	CASE 0
		SIF PENIS(PLAYER) == 0 || TALENT:처녀 || TALENT:PLAYER:동정 || CANTRAIN("넘어뜨리기기승위") == 0
			CONTINUE
		LOCALS = 요바이기승위
	CASE 1
		SIF PENIS(PLAYER) == 0 || EXP:PLAYER:Ａ삽입경험 == 0 || CANTRAIN("넘어뜨리기애널기승위") == 0
			CONTINUE
		LOCALS = 요바이Ａ기승위

	;욕구불만or同衾이벤트発生時には、ここより上の過激なプレイを優先する
	CASE 2
		SIF NUM_FIND && COND("욕구불만") + COND("同衾이벤트")
			BREAK

		SIF (COND("욕구불만") || AGE(TARGET) >= 2) && COND("同衾이벤트") == 0
			CONTINUE
		LOCALS = 添い寝
	CASE 3
		SIF TALENT:연모 == 0 || CANTRAIN("키스") == 0
			CONTINUE
		LOCALS = 요바이키스
	CASEELSE
		BREAK
	ENDSELECT

	NUM_FIND += 1

	SIF RAND:NUM_FIND
		CONTINUE

	CSTR:요바이 = %LOCALS%
NEXT

